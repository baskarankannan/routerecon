<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/field_padding_margin"
    tools:context=".fragments.ConfirmationCancelFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/field_padding_margin"
        android:gravity="center|top"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/cancel_trip"
        android:textColor="@color/red"
        android:textSize="@dimen/big_text"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/field_padding_margin"
        android:gravity="center"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/sure_cancel"
        android:textSize="@dimen/login_sign_up_text_size" />

    <include layout="@layout/layout_confirm_trip_cancel_footer" />


</LinearLayout>