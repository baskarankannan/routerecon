<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:padding="@dimen/field_padding_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:drawableStart="@drawable/ic_manage_friends"
        android:drawablePadding="@dimen/field_padding_margin"
        android:gravity="center|start"
        android:padding="@dimen/field_padding_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/login_sign_up_text_size"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/chk_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/field_padding_margin"
        android:textSize="@dimen/login_sign_up_text_size"
        android:button="@null"
        android:drawablePadding="@dimen/field_padding_margin"
        android:background="@android:color/transparent"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:drawableStart="@drawable/ic_manage_friends"
        android:layout_marginEnd="@dimen/field_padding_margin"
        android:selectAllOnFocus="true"
        tools:text="@tools:sample/cities"/>

</RelativeLayout>