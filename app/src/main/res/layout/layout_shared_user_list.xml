<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/negative_margin_bottom"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2_dp"
        android:layout_marginTop="@dimen/shared_user"
        android:background="@drawable/shape_ractangle_upper_shadow_bg"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/layout_drawer"
        android:layout_width="@dimen/dialog_text_margin_top"
        android:layout_height="@dimen/dialog_text_margin_top"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_circular_shadow_bg"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/iv_open_close_arrow"
        android:layout_width="@dimen/image_24_dp"
        android:layout_height="@dimen/image_24_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_upward_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_24_dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_top">

        <TextView
            android:id="@+id/tv_shared_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_top"
            android:text="@string/person_sharing_their_location"
            android:textColor="@color/black"
            android:textSize="@dimen/login_sign_up_text_size"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_user_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>