<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/field_padding_margin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_manage_friends"
        android:drawablePadding="@dimen/field_padding_margin"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/manage_group"
        android:textSize="@dimen/login_sign_up_text_size"/>

    <ImageView
        android:id="@+id/iv_edit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_contact_edit"
        android:padding="@dimen/padding_top"/>

    <ImageView
        android:id="@+id/iv_delete_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/iv_edit_group"
        android:padding="@dimen/padding_top"

        android:src="@drawable/ic_delete_black_24dp" />

</RelativeLayout>