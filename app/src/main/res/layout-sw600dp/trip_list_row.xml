<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trip_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/item_trip_name_panel_in_trip_list" />

    <TextView
        android:id="@+id/tv_trip_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:drawableStart="@drawable/ic_distance"
        android:drawablePadding="@dimen/padding_top"
        android:gravity="center|start"
        android:padding="@dimen/padding_top"
        android:textColor="@color/black"
        android:textSize="@dimen/login_sign_up_text_size"
        tools:text="@tools:sample/lorem" />


    <include layout="@layout/layout_trip_item_footer" />
</LinearLayout>