<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:id="@+id/toolbar_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_update_trip"
                android:layout_width="@dimen/image_24_dp"
                android:layout_height="@dimen/image_24_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/field_padding_margin"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/iv_share_trip"
                android:layout_width="@dimen/image_24_dp"
                android:layout_height="@dimen/image_24_dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/field_padding_margin"
                android:layout_toStartOf="@+id/iv_update_trip"
                android:src="@drawable/ic_share_black_24dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="@string/trip_details"
                android:textColor="@color/white"
                android:textSize="@dimen/login_sign_up_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/field_padding_margin"
                android:text="@string/share_trip"
                android:textColor="@color/white"
                android:textSize="@dimen/login_sign_up_text_size"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


</com.google.android.material.appbar.AppBarLayout>


