<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/success_image_size"
    android:background="@color/trip_details_panel_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/friends_attending"
        android:textColor="@color/white"
        android:textSize="@dimen/login_sign_up_text_size"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/field_padding_margin" />

    <LinearLayout
        android:id="@+id/layout_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/field_padding_margin"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_add_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/field_padding_margin"
            android:layout_weight="1"
            android:background="@drawable/nav_btn_bg"
            android:text="@string/add_more"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:padding="@dimen/padding_top" />

        <Button
            android:id="@+id/btn_cancel_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/field_padding_margin"
            android:layout_weight="1"
            android:background="@drawable/add_waypoint_btn_bg"
            android:text="@string/cancel_trip"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:padding="@dimen/padding_top"/>

    </LinearLayout>


</LinearLayout>