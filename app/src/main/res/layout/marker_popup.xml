<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout_marker_pop_up"
    android:background="@drawable/bg_marker_info_window"
    android:orientation="horizontal"
    android:padding="@dimen/field_padding_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/padding_top"
            android:textSize="@dimen/login_sign_up_text_size" />

        <TextView
            android:id="@+id/tv_full_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:visibility="gone"
            android:minLines="1"
            android:padding="@dimen/padding_top"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/remove"
        android:textColor="@color/red"
        android:textSize="4sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/padding_top"
        android:text="@string/edit"
        android:textColor="@color/red"
        android:textSize="@dimen/login_sign_up_text_size" />


</LinearLayout>