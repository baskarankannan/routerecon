<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_option"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewTripHistory"
        android:layout_width="@dimen/dialog_text_margin_top"
        android:layout_height="@dimen/dialog_text_margin_top"
        android:layout_gravity="end|center"
        android:visibility="gone"
        android:layout_margin="@dimen/padding_top"
        android:src="@drawable/ic_history" />


    <ImageView
        android:id="@+id/fab_address_search"
        android:layout_width="@dimen/dialog_text_margin_top"
        android:layout_height="@dimen/dialog_text_margin_top"
        android:layout_gravity="end|center"
        android:layout_margin="@dimen/padding_top"
        android:src="@drawable/ic_map_search" />

    <ImageView
        android:id="@+id/fab_option"
        android:layout_width="@dimen/dialog_text_margin_top"
        android:layout_height="64dp"
        android:layout_gravity="end|center"
        android:layout_margin="@dimen/padding_top"
        android:src="@drawable/ic_map_more" />

    <ImageView
        android:id="@+id/fab_my_location"
        android:layout_width="@dimen/dialog_text_margin_top"
        android:layout_height="@dimen/dialog_text_margin_top"
        android:layout_gravity="end|center"
        android:layout_margin="@dimen/padding_top"
        android:src="@drawable/ic_map_location" />

</LinearLayout>