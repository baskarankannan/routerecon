<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.ReportIssueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/field_padding_margin"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:text="@string/text_from"
            android:textSize="@dimen/login_sign_up_text_size" />

        <EditText
            android:id="@+id/et_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@null"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/field_padding_margin"
            android:textSize="@dimen/login_sign_up_text_size"
            tools:text="@tools:sample/full_names" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/landmark_image_size"
        android:gravity="top"
        android:hint="@string/text_write_feedback"
        android:background="@null"
        android:padding="@dimen/field_padding_margin"
        android:textSize="@dimen/login_sign_up_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:padding="@dimen/field_padding_margin" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/field_padding_margin"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/text_send"
        android:textSize="@dimen/login_sign_up_text_size" />

</LinearLayout>