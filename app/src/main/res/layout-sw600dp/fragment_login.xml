<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background_image"
    android:orientation="vertical"
    tools:context=".fragments.LoginFragment">

    <ImageView
        android:layout_width="@dimen/landmark_image_size"
        android:layout_height="@dimen/landmark_image_size"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/image_size"
        android:contentDescription="@string/app_logo"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/ic_main_icon_with_text_03" />


    <include layout="@layout/login_footer" />


</FrameLayout>