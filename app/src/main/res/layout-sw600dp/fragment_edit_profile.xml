<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:fillViewport="true"
    android:focusable="true"
    android:padding="@dimen/field_padding_margin"
    tools:context=".fragments.EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/share_trip_footer_height_width">

            <com.techacsent.route_recon.custom_view.RoundedCustomImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/text_margin_top"
                android:layout_height="@dimen/text_margin_top"
                android:scaleType="centerCrop" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ic_add_black_24dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/field_padding_margin"
            android:background="@null"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/field_padding_margin"
            android:hint="@string/email"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/field_padding_margin"
            android:textSize="@dimen/login_sign_up_text_size"
            tools:ignore="TextFields" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:padding="@dimen/field_padding_margin" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/field_padding_margin"
            android:background="@null"
            android:drawableStart="@drawable/ic_user_name_edit"
            android:drawablePadding="@dimen/field_padding_margin"
            android:hint="@string/user_name"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/field_padding_margin"
            android:textSize="@dimen/login_sign_up_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:padding="@dimen/field_padding_margin" />

        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/field_padding_margin"
            android:background="@null"
            android:drawableStart="@drawable/ic_full_name"
            android:drawablePadding="@dimen/field_padding_margin"
            android:hint="@string/full_name"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/field_padding_margin"
            android:textSize="@dimen/login_sign_up_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:padding="@dimen/field_padding_margin" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/field_padding_margin"
            android:background="@null"
            android:drawableStart="@drawable/ic_phone_number"
            android:drawablePadding="@dimen/field_padding_margin"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="@dimen/field_padding_margin"
            android:textSize="@dimen/login_sign_up_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"
            android:padding="@dimen/field_padding_margin" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/field_padding_margin"
            android:background="@drawable/nav_btn_bg"
            android:padding="@dimen/field_padding_margin"
            android:text="@string/ok"
            android:textColor="@color/white" />


    </LinearLayout>


</ScrollView>