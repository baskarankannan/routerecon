<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_add_update"
        android:layout_width="@dimen/image_24_dp"
        android:layout_height="@dimen/image_24_dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/field_padding_margin"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/trips"
        android:textColor="@color/white"
        android:textSize="@dimen/login_sign_up_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="@dimen/image_24_dp"
        android:layout_height="@dimen/image_24_dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_refresh_black_24dp" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/image_24_dp"
        android:layout_height="@dimen/image_24_dp"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_arrow_back_24" />


    <TextView
        android:id="@+id/tv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/field_padding_margin"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="@dimen/login_sign_up_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>