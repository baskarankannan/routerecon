<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_navigate_car"
        android:layout_width="0dp"
        android:layout_height="@dimen/dialog_text_margin_top"
        android:layout_weight="1"
        android:src="@drawable/ic_car_black_24dp" />

    <ImageView
        android:id="@+id/iv_navigate_cycle"
        android:layout_width="0dp"
        android:layout_height="@dimen/dialog_text_margin_top"
        android:layout_weight="1"
        android:src="@drawable/ic_cycle" />

    <ImageView
        android:id="@+id/iv_navigate_walking"
        android:layout_width="0dp"
        android:layout_height="@dimen/dialog_text_margin_top"
        android:layout_weight="1"
        android:src="@drawable/ic_human" />

</LinearLayout>