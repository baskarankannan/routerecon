<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/field_padding_margin"
    tools:context=".fragments.UserDetailsFragment">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/field_padding_margin"
        android:gravity="center|top"
        android:padding="@dimen/field_padding_margin"
        android:textSize="@dimen/login_sign_up_text_size"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
        android:drawablePadding="@dimen/field_padding_margin"
        android:gravity="center|start"
        android:padding="@dimen/field_padding_margin"
        android:textSize="@dimen/login_sign_up_text_size"
        android:maxLines="1"
        tools:text="@tools:sample/full_names" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/field_padding_margin"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_follow_unfollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/field_padding_margin"
            android:layout_weight="1"
            android:background="@drawable/nav_btn_bg"
            android:padding="@dimen/field_padding_margin"
            android:text="@string/follow"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/login_sign_up_text_size" />

        <Button
            android:id="@+id/btn_block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/field_padding_margin"
            android:layout_weight="1"
            android:background="@drawable/add_waypoint_btn_bg"
            android:padding="@dimen/field_padding_margin"
            android:text="@string/block"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/login_sign_up_text_size" />
    </LinearLayout>


</LinearLayout>