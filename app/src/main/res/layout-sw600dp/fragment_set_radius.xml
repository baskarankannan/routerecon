<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/field_padding_margin"
    tools:context=".fragments.SetRadiusFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pick_radius"
        android:textColor="@color/red"
        android:textSize="@dimen/big_text" />

    <TextView
        android:id="@+id/tv_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/login_sign_up_text_size"
        android:text="@string/radius_10"
        android:textSize="@dimen/login_sign_up_text_size" />

    <com.appyvet.materialrangebar.RangeBar
        android:id="@+id/rangebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrb_connectingLineColor="@color/grey"
        app:mrb_pinColor="@color/white"
        app:mrb_pinTextColor="@color/black"
        app:mrb_rangeBar="false"
        app:mrb_rangeBarColor="@color/grey"
        app:mrb_selectorColor="@color/colorPrimaryDark"
        app:mrb_selectorSize="@dimen/field_padding_margin"
        app:mrb_tickEnd="2"
        app:mrb_tickInterval="0.1"
        app:mrb_tickStart="0.1" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/login_sign_up_text_size" />

</LinearLayout>