<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/field_padding_margin"
    tools:context=".fragments.EditMarkerFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/edit_marker_text"
        android:textColor="@color/orange"
        android:textSize="@dimen/big_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/enter_name_address"
        android:textColor="@color/orange"
        android:textSize="@dimen/small_text_size" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/address"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/field_padding_margin"
        android:textSize="@dimen/login_sign_up_text_size" />


    <EditText
        android:id="@+id/et_full_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_padding_margin"
        android:background="@null"
        android:hint="@string/full_address"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/field_padding_margin"
        android:textSize="@dimen/login_sign_up_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/field_padding_margin">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/field_padding_margin"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/login_sign_up_text_size" />

        <Button
            android:id="@+id/btn_edit_marker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/field_padding_margin"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/login_sign_up_text_size" />

    </LinearLayout>


</LinearLayout>