<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/field_padding_margin"
    tools:context=".fragments.DirectionFragment">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/field_padding_margin"
        android:text="@string/cancel"
        android:textColor="@color/blue"
        android:textSize="@dimen/login_sign_up_text_size"
        android:textStyle="bold" />

    <include layout="@layout/layout_direction_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_direction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/field_padding_margin"
        tools:listitem="@layout/recycler_view_item_3"/>

</LinearLayout>