<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/success_image_size"
    android:padding="@dimen/field_padding_margin"
    app:cardCornerRadius="@dimen/padding_top"
    android:elevation="@dimen/height_2_dp"
    android:layout_margin="@dimen/field_padding_margin">

    <ImageView
        android:id="@+id/iv_landmark_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/iv_delete_image"
        android:layout_width="@dimen/app_logo_text_margin"
        android:layout_height="@dimen/app_logo_text_margin"
        android:layout_gravity="center|top|left"
        android:src="@drawable/ic_close_gray"
        android:visibility="gone" />


</androidx.cardview.widget.CardView>