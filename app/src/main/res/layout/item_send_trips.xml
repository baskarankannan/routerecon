<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trip_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_trip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />




    <TextView
        android:id="@+id/tv_trip_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:drawableStart="@drawable/ic_distance"
        android:padding="@dimen/padding_top"
        android:textColor="@color/black"
        android:textSize="@dimen/login_sign_up_text_size" />

    <include layout="@layout/item_trips_item_row_footer" />

</LinearLayout>